@model WebBlotter.Models.SBP_BlotterOpening


@{
    ViewBag.Title = "EditProduct";
}

<h2>Edit</h2>


@using (Html.BeginForm("Update", "BlotterOpening", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Blotter Opening Amount @ViewData["SysCurrentDt"]</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SNo)

        <div class="form-group">
            @Html.LabelFor(model => model.TodayAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TodayAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TodayAmount, "Please enter Opening Amount", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.HiddenFor(m => m.br, new { @Value = @ViewData["BrCode"] })
        </div>      
        <div class="form-group">
            @Html.HiddenFor(m => m.CurrentDate, new { @Value = @ViewData["SysCurrentDt"] })
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "GetAllOpeningAmt")
</div>  