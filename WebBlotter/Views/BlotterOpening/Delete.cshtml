@model WebBlotter.Models.SBP_BlotterOpening

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Blotter Opening Amount @ViewData["SysCurrentDt"]</legend>

    <div class="display-label">S.No</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SNo)
    </div>

    <div class="display-label">Opening Amount</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TodayAmount)
    </div>
    
    <div class="form-group">
        @Html.HiddenFor(m => m.CurrentDate, new { @Value = DateTime.Now })
    </div>
</fieldset>
@using (Html.BeginForm("Delete", "BlotterSetup", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "GetAllOpeningAmt")
    </p>
}
