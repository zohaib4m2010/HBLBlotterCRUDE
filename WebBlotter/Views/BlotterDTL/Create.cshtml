@model WebBlotter.Models.SBP_BlotterDTL

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm("Create", "BlotterDTL", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal">
            <h2>Blotter DTL As On @ViewData["SysCurrentDt"]</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
     
            <div class="form-group">
                @Html.LabelFor(model => model.DTL_Date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    @Html.EditorFor(model => model.DTL_Date, new { htmlAttributes = new { @class = "form-control datepicker" } })

                    @Html.ValidationMessageFor(model => model.DTL_Date, "", new { @class = "text-danger" })
                </div>
            </div> 
            <div class="form-group">
                @Html.HiddenFor(m => m.DTL_Code, new { @Value = "DTL" })

            </div>                
            <div class="form-group">
                @Html.LabelFor(model => model.NO_OF_Days, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NO_OF_Days, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NO_OF_Days, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DTL_Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DTL_Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DTL_Amount, "", new { @class = "text-danger" })
                </div>
            </div>     
            <div class="form-group">
                @Html.HiddenFor(m => m.T_User_Id, new { @Value = "SysAdmin" })
            </div>                          
            <div class="form-group">
                @Html.HiddenFor(m => m.T_Date, new { @Value = @ViewData["SysCurrentDt"] })         
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.br, new { @Value = @ViewData["BrCode"] })
            </div> 
            <div class="form-group">
                @Html.HiddenFor(m => m.Flag, new { @Value = "A" })

            </div>
            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" />
                </div>
            </div>
        </div>
        </fieldset>
        }

        <div>
            @Html.ActionLink("Back to List", "GetAllDTLDeals")
        </div>
