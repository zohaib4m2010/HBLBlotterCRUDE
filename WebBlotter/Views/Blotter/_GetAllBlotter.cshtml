        //    var date = $("#SearchByDateId").val();
        //    $("#FillDumpBlotter").empty();
        //    $("#FillDumpBlotter").load("/blotter/GetAllBlotterbydate/?Date=" + date+"&LoadData=false");

        //});

    </script>
</body>

</html>
