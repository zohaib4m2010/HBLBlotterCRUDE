@model IEnumerable<WebBlotter.Models.SBP_BlotterOpeningBalance>
@{
    /**/

    ViewBag.Title = "Blotter Opening Balance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Blotter Opening Balance</h2>

<style>
    #customers {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 11px;
        border-collapse: collapse;
        width: 90%;
        min-width: 800px;
        max-width: 1500px;
    }

        #customers td, #customers th {
            border: 1px solid #ddd;
            padding: 2px;
            font-size: 10.5px;
        }

        #customers tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #customers tr:hover {
            background-color: #ddd;
        }

        #customers th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>
<style>
    table, th, td {
        border: 1px solid black;
    }
    /*th  {
    border: 1px solid black;
    color:red;
    width: 55px
    }*/
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>

    @*<script src="Scripts/moment.js"></script>*@
    <table id="customers" class="table table-striped table-bordered table-hover ">
        <thead>
            <tr>
                @*<th>SNo</th>*@
                @if (Session["BR"].ToString() != "01")
                {
                    <th>Data Type</th>}
                <th>Date</th>
                <th>Opening Balance</th>
                <th></th>
            </tr>
        </thead>
        <Clearingdy>

            @foreach (var item in Model)
            {
            <tr>
                @*<td width="6%">@Html.DisplayFor(modelItem => item.Id)</td>*@
                @if (Session["BR"].ToString() != "01")
                {
                    <td align="right" width="8%">@Html.DisplayFor(modelItem => item.DataType)</td>
                }
                <td align="right" width="10%">@Html.DisplayFor(modelItem => item.BalDate)</td>
                <td align="left" width="8%">@Html.DisplayFor(modelItem => item.OpenBalActual)</td>


                <td width="18%" align="right">
                    @if ((bool)ViewData["isEditable"])
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }
                    |
                    @if ((bool)ViewData["IsDeletable"])
                    {
                        @*@Html.ActionLink("Details", "Details", new { id = item.SNo }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                </td>
            </tr>

            }

    </table>
</div>
