@model IEnumerable<WebBlotter.Models.SBP_BlotterManualDeals>

@{
    ViewBag.Title = "Blotter Manual Deals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>  
    <style>#customers {
              font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
              font-size:11px;
              border-collapse: collapse;
                             width:90%;
                min-width:800px;
                 max-width:1500px;
            }
            #customers td, #customers th {
              border: 1px solid #ddd;
              padding: 2px;
               font-size:10.5px;
                     }
            #customers tr:nth-child(even){background-color: #f2f2f2;}
            #customers tr:hover {background-color: #ddd;}
            #customers th {
              padding-top: 12px;
              padding-bottom: 12px;
              text-align: left;
              background-color: #4CAF50;
              color: white;
                }
        </style>
    <style>
    table, th, td {
    border: 1px solid black;
    }
    /*th  {
    border: 1px solid black;
    color:red;
    width: 55px
    }*/

    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" language="javascript" src="//cdn.datatables.net/plug-ins/1.10.15/api/sum().js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js" type="text/javascript"></script>
</head>
<body>
    <h2>Blotter Manual Deals @ViewData["SysCurrentDt"]</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div>     
           
           
            <table id="customers" class="table table-striped table-bordered table-hover "  >
                <thead>
                    <tr>
                        <th>S.No. </th>                       
                        <th width="10%">Description</th>                      
                        <th>Deal Date        </th>                       
                        <th>InFlow</th>
                        <th>OutFlow</th>                       
                        <th>CurrentDate</th>
                        <th>DealStatus</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.SNo)</td>   
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>     
                            <td id="DealDate" width="10%" >@Html.DisplayFor(modelItem => item.DealDate)
                                <script>
                                  var NowMoment = moment("@Html.DisplayFor(modelItem => item.DealDate)");
                                    var eDisplayMoment = document.getElementById('DealDate');
                                 eDisplayMoment.innerHTML = NowMoment.format('DD-MMM-YYYY');
                                </script>
                            </td>   
                            <td  align="right">@Html.DisplayFor(modelItem => item.InFlow )</td>
                            <td  align="right">@Html.DisplayFor(modelItem => item.OutFlow)</td>
                            <td>@Html.DisplayFor(modelItem => item.CurrentDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.DealStatus)</td>

                            <td width="18%">
                                @Html.ActionLink("Edit", "Edit", new { id = item.SNo }) |
                                @Html.ActionLink("Details", "Details", new { id = item.SNo }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.SNo })
                            </td>
                        </tr>

                    }

            </table>
</div>

</body>
</html>